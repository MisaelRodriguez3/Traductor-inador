QTabBar::tab {
    background: #f0f0f0;
    padding: 10px;
    border: 1px solid #d9d9d9;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background: #fff;
    font-weight: bold;
}

QWidget {
    font-family: Segoe UI;
    font-size: 14px;
}
QLabel {
    font-weight: bold;
}